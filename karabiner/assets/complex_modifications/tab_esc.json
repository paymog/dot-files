{
  "title": "Change tab key",
  "rules": [
    {
      "description": "Change tab to control if pressed with other keys, to tab if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    }
  ]
}
